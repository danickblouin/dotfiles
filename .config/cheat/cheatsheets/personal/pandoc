# Convert HTML file to Markdown
pandoc -f html -t markdown  -i <HTML input file> -o  <markdown output file>

# Convert Markdown file to HTML
pandoc -f markdown -t html -i <markdown input file>  -o <HTML output file>

# Convert Markdown file to PDF using LaTeX and section numbers
pandoc --number-sections <input.md> -o <output.pdf> --pdf-engine=xelatex -V mainfont="Times New Roman"
